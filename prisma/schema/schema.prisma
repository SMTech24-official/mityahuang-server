generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model ExchangeRate {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  from String // the currencies in short form --> CNY
  to   String // the currencies in short form --> USD
  rate Float

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("exchange-rate")
}

model WhatsappContact {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  imageUrl    String

  @@map("whatsapp-contact")
}

model SocialMedia {
  id       String            @id @default(auto()) @map("_id") @db.ObjectId
  imageUrl String
  link     String
  status   SocialMediaStatus @default(Normal)
}

model Bulletin {
  id        String               @id @default(auto()) @map("_id") @db.ObjectId
  date      DateTime
  eventName String
  status    NormalOrHiddenStatus

  createdAt DateTime @default(now())

  @@map("bulletin")
}

model Advertising {
  id                  String @id @default(auto()) @map("_id") @db.ObjectId
  link                String
  textSize            Int
  advertisingImageUrl String

  updatedAt DateTime @updatedAt()

  @@map("advertising")
}

model HelpCenter {
  id             String @id @default(auto()) @map("_id") @db.ObjectId
  whatsAppNumber String
  email          String

  updatedAt DateTime @updatedAt()

  @@map("help_center")
}
